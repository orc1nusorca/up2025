<Window x:Class="PM_04_ISP32_SSE.pages.MaterialEdit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PM_04_ISP32_SSE.pages"
        mc:Ignorable="d"
       Title="Редактирование материала" Height="680" Width="950"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок и основная информация -->
        <StackPanel Grid.Row="0">
            <TextBlock Text="Основная информация" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Наименование -->
                <TextBlock Text="Наименование:" Grid.Row="0" Grid.Column="0" Margin="0,0,5,5" VerticalAlignment="Center"/>
                <TextBox x:Name="NameTextBox" Grid.Row="0" Grid.Column="1" Margin="0,0,0,5"/>

                <!-- Тип материала -->
                <TextBlock Text="Тип материала:" Grid.Row="0" Grid.Column="2" Margin="10,0,5,5" VerticalAlignment="Center"/>
                <ComboBox x:Name="TypeComboBox" Grid.Row="0" Grid.Column="3" Margin="0,0,0,5"/>

                <!-- Количество на складе -->
                <TextBlock Text="Количество на складе:" Grid.Row="1" Grid.Column="0" Margin="0,0,5,5" VerticalAlignment="Center"/>
                <TextBox x:Name="CountTextBox" Grid.Row="1" Grid.Column="1" Margin="0,0,0,5" TextChanged="NumericTextBox_TextChanged"/>

                <!-- Единица измерения -->
                <TextBlock Text="Единица измерения:" Grid.Row="1" Grid.Column="2" Margin="10,0,5,5" VerticalAlignment="Center"/>
                <TextBox x:Name="UnitTextBox" Grid.Row="1" Grid.Column="3" Margin="0,0,0,5"/>

                <!-- Количество в упаковке -->
                <TextBlock Text="Количество в упаковке:" Grid.Row="2" Grid.Column="0" Margin="0,0,5,5" VerticalAlignment="Center"/>
                <TextBox x:Name="PackageTextBox" Grid.Row="2" Grid.Column="1" Margin="0,0,0,5" TextChanged="NumericTextBox_TextChanged"/>

                <!-- Минимальное количество -->
                <TextBlock Text="Минимальное количество:" Grid.Row="2" Grid.Column="2" Margin="10,0,5,5" VerticalAlignment="Center"/>
                <TextBox x:Name="MinCountTextBox" Grid.Row="2" Grid.Column="3" Margin="0,0,0,5" TextChanged="NumericTextBox_TextChanged"/>

                <!-- Стоимость за единицу -->
                <TextBlock Text="Стоимость за единицу:" Grid.Row="3" Grid.Column="0" Margin="0,0,5,5" VerticalAlignment="Center"/>
                <TextBox x:Name="PriceTextBox" Grid.Row="3" Grid.Column="1" Margin="0,0,0,5" TextChanged="NumericTextBox_TextChanged"/>

                <!-- Изображение -->
                <TextBlock Text="Изображение:" Grid.Row="4" Grid.Column="0" Margin="0,0,5,5" VerticalAlignment="Center"/>
                <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal">
                    <Button x:Name="LoadImageButton" Content="Загрузить" Click="LoadImageButton_Click" Margin="0,0,5,5" Width="127" Height="55"/>
                    <Image x:Name="MaterialImage" Width="100" Height="100" Stretch="Uniform" Margin="5,0,0,5"/>
                </StackPanel>

                <!-- Расчет стоимости закупки -->
                <TextBlock Text="Расчет закупки:" Grid.Row="3" Grid.Column="2" Margin="10,0,5,5" VerticalAlignment="Center"/>
                <TextBlock x:Name="PurchaseCostTextBlock" Grid.Row="3" Grid.Column="3" Margin="0,0,0,5" TextWrapping="Wrap"/>
            </Grid>
        </StackPanel>

        <!-- Описание и поставщики -->
        <Grid Grid.Row="1" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Описание -->
            <StackPanel Grid.Column="0">
                <TextBlock Text="Описание:" FontWeight="Bold" FontSize="14" Margin="0,0,0,5"/>
                <TextBox x:Name="DescriptionTextBox" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Height="150"/>
            </StackPanel>

            <!-- Поставщики -->
            <StackPanel Grid.Column="2">
                <TextBlock Text="Поставщики:" FontWeight="Bold" FontSize="14" Margin="0,0,0,5"/>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Добавление поставщика -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,5">
                        <ComboBox x:Name="SuppliersComboBox" Width="200" Margin="0,0,5,0"/>
                        <Button x:Name="AddSupplierButton" Content="Добавить" Click="AddSupplierButton_Click" Width="80"/>
                    </StackPanel>

                    <!-- Список поставщиков -->
                    <ListView x:Name="SuppliersListView" Grid.Row="1" Margin="0,0,0,5">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Поставщик" DisplayMemberBinding="{Binding Postavshik.name_postavshik}" Width="200"/>
                                <GridViewColumn Header="Цена" DisplayMemberBinding="{Binding stoimost_ed}" Width="100"/>
                            </GridView>
                        </ListView.View>
                    </ListView>

                    <!-- Удаление поставщика -->
                    <Button x:Name="RemoveSupplierButton" Content="Удалить поставщика" Click="RemoveSupplierButton_Click" HorizontalAlignment="Right" Width="120"/>
                </Grid>
            </StackPanel>
        </Grid>

        <!-- Кнопки управления -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="DeleteButton" Content="Удалить" Width="100" Margin="0,0,10,0" Click="DeleteButton_Click" Background="#FFE74C3C" Foreground="White"/>
            <Button x:Name="CancelButton" Content="Отмена" Width="100" Margin="0,0,10,0" Click="CancelButton_Click"/>
            <Button x:Name="SaveButton" Content="Сохранить" Width="100" Click="SaveButton_Click" Background="#FF2ECC71" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>